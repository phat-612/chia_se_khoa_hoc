<div class="container mt-5">
  <h2 class="text-center mb-4">Thêm Khóa Học Mới</h2>
  <form action="/courses/create" method="POST">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <label for="thumbnail" class="form-label">Hình Ảnh</label>
          <input type="text" class="form-control" id="thumbnail" name="thumbnail_url" placeholder="URL hình ảnh" />
        </div>
        <img src="https://via.placeholder.com/300x200" alt="Thumbnail Preview" class="img-fluid" />
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <label for="title" class="form-label">Tên Khóa Học</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Nhập tên khóa học" />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Mô Tả</label>
          <textarea class="form-control" id="description" name="description" rows="3" placeholder="Nhập mô tả khóa học"></textarea>
        </div>
        <div class="mb-3">
          <label for="category_id" class="form-label">Danh Mục</label>
          <% data.categories.forEach(function(category,index){ %>
          <select class="form-select" id="category_id" name="category_id">
            <option value="" disabled selected>Chọn danh mục</option>
            <option value="<%= category.id %>"><%= category.name %></option>
          </select>
          <% }) %>
        </div>
        <div class="mb-3">
          <label for="course_url" class="form-label">URL Khóa Học</label>
          <input type="text" class="form-control" id="course_url" name="course_url" placeholder="Nhập URL khóa học" />
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-between m-4">
      <a href="/admin/course" class="btn btn-secondary">Quay lại</a>
      <button type="submit" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Thêm Khóa Học
      </button>
    </div>
  </form>
</div>