<div class="container mt-5">
  <h2 class="text-center mb-4">Quản Lý Khóa Học</h2>

  <div class="d-flex justify-content-between mb-3">
    <form class="d-flex w-75">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Tìm kiếm theo tên khóa học"
        aria-label="Search"
      />
      <button class="btn btn-outline-primary" type="button">Tìm</button>
    </form>
    <a class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Thêm Khóa Học
    </a>
  </div>

  <!-- Bảng Hiển Thị Khóa Học -->
  <table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Hình Ảnh</th>
        <th>Tên Khóa Học</th>
        <th>Mô Tả</th>
        <th>Danh Mục</th>
        <th>Ngày Tạo</th>
        <th>Hành Động</th>
      </tr>
    </thead>
    <tbody>
      <% data.courses.forEach(function(course, index){ %>
      <tr>
        <td><%= index + 1 %></td>
        <td>
          <img
            src="https://via.placeholder.com/80x50"
            alt="Thumbnail"
            class="img-thumbnail"
          />
        </td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.category_id %></td>
        <td><%= course.created_at %></td>
        <td>
          <a
            href="/admin/detailCourse/<%= course.id %>"
            class="btn btn-success btn-sm me-2"
          >
            <i class="bi bi-eye"></i> Xem
          </a>

          <button class="btn btn-primary btn-sm me-2">
            <i class="bi bi-pencil-square"></i> Sửa
          </button>
          <button class="btn btn-danger btn-sm">
            <i class="bi bi-trash"></i> Xóa
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
